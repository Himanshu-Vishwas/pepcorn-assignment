<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/rvf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_uidf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginHorizontal="10dp"
            android:background="@color/teal_200"
            android:text="User ID"
            />
        <TextView
            android:id="@+id/tv_namef"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Name"
            android:background="#FFFF00"
            android:layout_marginHorizontal="10dp"
            android:layout_toEndOf="@+id/tv_uidf"
            />
        <TextView
            android:id="@+id/tv_payidf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="#f00"
            android:text="Pay_id"
            android:layout_marginHorizontal="10dp"
            android:layout_toEndOf="@+id/tv_namef"
            />
        <TextView
            android:id="@+id/tv_statusf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="#0f0"
            android:text="Status"
            android:layout_marginHorizontal="10dp"
            android:layout_toEndOf="@+id/tv_payidf"
            />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_below="@+id/rvf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>